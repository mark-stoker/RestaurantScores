@model IEnumerable<RestaurantScores.Models.ResultsViewModel>

@{
    ViewData["Title"] = "Results";
}

<h2>Results</h2>
<h3>Search results for :@Model.First().Review.Name</h3>
<tbody>
</tbody>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerScrapingDetails.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerScrapingDetails.WebAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review.NumberOfReviews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review.OverallScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerScrapingDetails.OverallMaxScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review.DishTheDirtScore)
            </th>
        </tr>
    </thead>
    <tbody>
       
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ReviewerScrapingDetails.Name
            </td>
            <td>
                @item.ReviewerScrapingDetails.WebAddress
            </td>
            <td>
                @item.Review.NumberOfReviews
            </td>
            <td>
                @item.Review.OverallScore
            </td>
            <td>
                @item.ReviewerScrapingDetails.OverallMaxScore
            </td>
            <td>
                @{
                    double overallScore = @item.Review.OverallScore.GetValueOrDefault();
                    double  overallMaxScore = @item.ReviewerScrapingDetails.OverallMaxScore;

                    var divideSingle = @overallScore / overallMaxScore * 100;
                }
            @divideSingle
</tr>
    }
    <tfoot>
        <tr align="right">
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td><strong>Aggregate Score:</strong></td>
            @*TODO: format to 1 dp*@
            <td align="left">
                @{
                    double sumOveralScore = @Model.Sum(x => x.Review.OverallScore.GetValueOrDefault());
                    double sumOverallMaxScore = @Model.Sum(y => y.ReviewerScrapingDetails.OverallMaxScore);

                    var divideAll = sumOveralScore / sumOverallMaxScore * 100;
                }
                @divideAll.ToString("0.0")
            </td>
        </tr>
    </tfoot>
    </tbody>
</table>
